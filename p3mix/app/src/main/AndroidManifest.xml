<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ignaciosantonjamolina.p3">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Credits activity-->
        <!--Enable up navigation-->
        <activity
            android:name="com.example.ignaciosantonjamolina.p3.CreditsActivity"
            android:label="@string/title_activity_credits"
            android:parentActivityName="com.example.ignaciosantonjamolina.p3.MainActivity">

            <!--Enable up navigation for backwards compatibility-->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ignaciosantonjamolina.p3.MainActivity"/>
        </activity>

        <!--Settings activity-->
        <!--Enable up navigation-->
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.example.ignaciosantonjamolina.p3.MainActivity">

            <!--Enable up navigation for backwards compatibility-->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ignaciosantonjamolina.p3.MainActivity"/>
        </activity>

        <!--Score activity-->
        <!--Enable up navigation-->
        <activity
            android:name="com.example.ignaciosantonjamolina.p3.ScoreActivity"
            android:label="@string/title_activity_score"
            android:parentActivityName="com.example.ignaciosantonjamolina.p3.MainActivity">

            <!--Enable up navigation for backwards compatibility-->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ignaciosantonjamolina.p3.MainActivity"/>
        </activity>

        <!--Play activity-->
        <!--Enable up navigation-->
        <activity
            android:name="com.example.ignaciosantonjamolina.p3.PlayActivity"
            android:label="@string/title_activity_score"
            android:parentActivityName="com.example.ignaciosantonjamolina.p3.MainActivity">

            <!--Enable up navigation for backwards compatibility-->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ignaciosantonjamolina.p3.MainActivity"/>
        </activity>
    </application>

</manifest>